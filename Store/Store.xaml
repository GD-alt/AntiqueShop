<Page x:Class="AntiqueShop.Store.Store"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AntiqueShop.Store"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Store">

    <Grid Background="White" ShowGridLines="True">
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Label Content="Поиск:" HorizontalAlignment="Left" Margin="5,0,0,0" VerticalAlignment="Center" FontSize="14"/>
        <TextBox x:Name="SearchBox" HorizontalAlignment="Left" Margin="60,0,0,0" TextWrapping="Wrap" VerticalAlignment="Center" Width="85" Height="28" TextChanged="SearchBox_TextChanged"/>
        <ComboBox x:Name="SortCombo" HorizontalAlignment="Left" Margin="407,0,0,0" VerticalAlignment="Center" Width="85" Height="28" SelectionChanged="SortCombo_SelectionChanged"/>
        <Label Content="Сорт. по цене:" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="14" Margin="302,0,0,0"/>
        <ComboBox x:Name="FilterCombo" HorizontalAlignment="Left" VerticalAlignment="Center" Width="85" Height="28" SelectionChanged="FilterCombo_SelectionChanged" Margin="213,0,0,0"/>
        <Label Content="Размер:" HorizontalAlignment="Left" Margin="150,0,0,0" VerticalAlignment="Center" FontSize="14"/>
        <ListView x:Name="ListProducts" ScrollViewer.CanContentScroll="False" Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}" Margin="10,2,0,0" d:ItemsSource="{d:SampleData ItemCount=5}" FontSize="14" FontFamily="Segoe UI" RenderTransformOrigin="0.5,0.5" Grid.Row="1">
            <ListView.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleX="-0.086"/>
                    <RotateTransform/>
                    <TranslateTransform X="-0.748"/>
                </TransformGroup>
            </ListView.RenderTransform>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid ShowGridLines="True">
                        <!-- Three columns — one for image (small), basical info (leftover space), price and amount (small) -->
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Image Source="{Binding image_url}" Grid.Column="0" Margin="10,10,10,10" Width="90"/>
                        <StackPanel Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center">
                            <TextBlock Text="{Binding name}" FontSize="16" FontWeight="Bold" Margin="10,10,10,10"/>
                            <TextBlock Text="{Binding description}" FontSize="14" FontWeight="Normal" Margin="10,10,10,10"/>
                            <TextBlock Text="{Binding size}" FontSize="12" FontWeight="Normal" Margin="10,10,10,10"/>
                            <TextBlock Text="{Binding color}" FontSize="12" FontWeight="Normal" Margin="10,10,10,10"/>
                        </StackPanel>
                        <StackPanel Grid.Column="2"  VerticalAlignment="Center" HorizontalAlignment="Center">
                            <TextBlock Text="{Binding price}" FontSize="16" FontWeight="Bold" Margin="10,10,10,10"/>
                            <TextBlock Text="{Binding stock}" FontSize="16" FontWeight="Bold" Margin="10,10,10,10"/>
                            <TextBlock Text="{Binding category}" FontSize="14" FontWeight="Normal" Margin="10,10,10,10"/>
                        </StackPanel>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Button x:Name="AddGood" Content="Добавить" HorizontalAlignment="Left" Margin="501,0,0,0" VerticalAlignment="Center"/>
        <Button x:Name="EditGood" Content="Редактировать" HorizontalAlignment="Left" Margin="563,0,0,0" VerticalAlignment="Center"/>
        <Button Content="Корзина" HorizontalAlignment="Left" Margin="739,0,0,0" VerticalAlignment="Center"/>
        <Button Content="Пользователи" HorizontalAlignment="Left" Margin="653,0,0,0" VerticalAlignment="Center"/>
    </Grid>
</Page>
